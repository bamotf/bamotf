{
  "name": "@bamotf/node",
  "version": "0.1.2",
  "description": "A convenient access to the bamotf API from applications written in server-side JavaScript.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bamotf/bamotf",
    "directory": "packages/node"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/**"
  ],
  "bugs": "https://github.com/bamotf/bamotf/issues",
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "lint": "eslint *.ts*",
    "typecheck": "tsc",
    "test:integration": "vitest run",
    "test:integration:watch": "vitest"
  },
  "devDependencies": {
    "@bamotf/server": "workspace:*",
    "@types/hdkey": "^2.0.1",
    "eslint": "^8.0.0",
    "eslint-config-custom": "workspace:*",
    "logger": "workspace:*",
    "msw": "^2.0.0",
    "tsconfig": "workspace:*",
    "tsup": "^7.0.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@bamotf/utils": "workspace:*",
    "@swan-bitcoin/xpub-lib": "^0.1.5",
    "axios": "^1.4.0",
    "secure-webhooks": "^0.3.0"
  }
}
