{
  "name": "@bamotf/react",
  "version": "0.0.0",
  "sideEffects": [
    "**/*.css"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./src/index.ts"
    },
    "./src/qr-code": {
      "import": "./src/qr-code.tsx",
      "require": "./src/qr-code.tsx",
      "types": "./src/qr-code.tsx"
    },
    "./src/copyable": {
      "import": "./src/copyable.tsx",
      "require": "./src/copyable.tsx",
      "types": "./src/copyable.tsx"
    },
    "./src/payment-details": {
      "import": "./src/payment-details.tsx",
      "require": "./src/payment-details.tsx",
      "types": "./src/payment-details.tsx"
    },
    "./base.css": "./dist/base.css",
    "./components.css": "./dist/components.css",
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist/**",
    "src/**"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint \"src/**/*.ts*\"",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/react-dom": "18.2.4",
    "@types/react": "18.2.11",
    "autoprefixer": "^10.4.14",
    "eslint-config-custom": "workspace:*",
    "eslint": "^7.32.0",
    "postcss-import": "^15.1.0",
    "postcss": "^8.4.20",
    "qrcode.react": "^3.1.0",
    "tailwind-config": "workspace:*",
    "tailwindcss": "^3.3.2",
    "tsconfig": "workspace:*",
    "tsup": "^6.1.3",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@bamotf/utils": "workspace:*",
    "lucide-react": "^0.233.0",
    "react-dom": "^18.2.0",
    "react": "^18.2.0"
  }
}
