{
  "name": "@bamotf/react",
  "version": "0.1.2",
  "description": "A set of React components that helps you build Bitcoin related interfaces",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bamotf/bamotf",
    "directory": "packages/react"
  },
  "publishConfig": {
    "access": "public"
  },
  "bugs": "https://github.com/bamotf/bamotf/issues",
  "sideEffects": [
    "**/*.css"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./src/index.ts"
    },
    "./src/qr-code": {
      "import": "./src/qr-code.tsx",
      "require": "./src/qr-code.tsx",
      "types": "./src/qr-code.tsx"
    },
    "./src/copyable": {
      "import": "./src/copyable.tsx",
      "require": "./src/copyable.tsx",
      "types": "./src/copyable.tsx"
    },
    "./src/payment-details": {
      "import": "./src/payment-details.tsx",
      "require": "./src/payment-details.tsx",
      "types": "./src/payment-details.tsx"
    },
    "./base.css": "./dist/base.css",
    "./components.css": "./dist/components.css",
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist/**",
    "src/**"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint \"src/**/*.ts*\"",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/react-dom": "18.2.14",
    "@types/react": "18.2.33",
    "autoprefixer": "^10.4.14",
    "eslint-config-custom": "workspace:*",
    "eslint": "^8.0.0",
    "postcss-import": "^15.1.0",
    "postcss": "^8.4.20",
    "qrcode.react": "^3.1.0",
    "tailwind-config": "workspace:*",
    "tailwindcss": "^3.3.2",
    "tsconfig": "workspace:*",
    "tsup": "^7.0.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@bamotf/utils": "workspace:*",
    "lucide-react": "^0.279.0",
    "react-dom": "^18.2.0",
    "react": "^18.2.0"
  }
}
